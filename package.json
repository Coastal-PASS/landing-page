{
  "name": "coastalpass",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "next dev -H 192.168.191.253",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --max-warnings=0",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,md,json}\"",
    "test:watch": "vitest watch",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "validate": "npm run lint && npm run type-check && npm run test:coverage && npm run build",
    "go:fmt": "cd backend/gnss && gofmt ./...",
    "go:lint": "cd backend/gnss && golangci-lint run ./...",
    "go:test": "cd backend/gnss && go test ./... -race",
    "go:run": "cd backend/gnss && go run ./cmd/server --config config.local.yaml",
    "go:migrate": "cd backend/gnss && go run ./cmd/migrate --config config.local.yaml"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.7",
    "@tanstack/react-query-devtools": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.553.0",
    "next": "^15.5.6",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.66.0",
    "react-icons": "^5.5.0",
    "react-scroll-to-top": "^3.1.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.11.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.25",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitest/coverage-v8": "^4.0.8",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.57.0",
    "eslint-config-next": "15.1.8",
    "jsdom": "^27.2.0",
    "lighthouse": "^13.0.1",
    "postcss": "^8.4.49",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.6.3",
    "vitest": "^4.0.8"
  }
}
